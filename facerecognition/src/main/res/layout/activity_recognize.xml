<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/asvs"
        tools:context="org.opencv.cultoftheunicorn.marvel.cultoftheunicorn.marvel.Training">

        <cultoftheunicorn.marvel.Tutorial3View
            android:id="@+id/tutorial3_activity_java_surface_view"
            android:layout_width="278dp"
            android:layout_height="252dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="36dp" />

        <TextView
            android:id="@+id/results"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/scan"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="88dp"
            android:layout_toEndOf="@+id/tutorial3_activity_java_surface_view"
            android:layout_toRightOf="@+id/tutorial3_activity_java_surface_view"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold" />

    <Button
        android:id="@+id/camchange"
        android:layout_width="47dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tutorial3_activity_java_surface_view"
        android:layout_toEndOf="@+id/tutorial3_activity_java_surface_view"
        android:background="@drawable/invertcam"
        android:layout_toRightOf="@+id/tutorial3_activity_java_surface_view" />

    <ToggleButton
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tutorial3_activity_java_surface_view"
        android:layout_marginEnd="11dp"
        android:background="@drawable/rect11"
        android:checked="false"
        android:textAllCaps="false"
        android:textOff="@string/scan"
        android:textOn="@string/scanning"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tutorial3_activity_java_surface_view"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/tutorial3_activity_java_surface_view"
            android:layout_toRightOf="@id/tutorial3_activity_java_surface_view"
            android:text="@string/results"
            android:textColor="@color/lightBlack"
            android:textStyle="bold" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tutorial3_activity_java_surface_view"
        android:layout_marginEnd="137dp"
        android:background="@drawable/rect12"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="137dp" />

    </RelativeLayout>


